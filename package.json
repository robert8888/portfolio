{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config":{
    "src_dir":"static_src",
    "dest_dir": "static_compiled"
  },
  "scripts": {
    "compile:sass": "cross-var sass $npm_package_config_src_dir:$npm_package_config_dest_dir",
    "compile:sass:w": "cross-var sass --watch $npm_package_config_src_dir:$npm_package_config_dest_dir",
    "compile:js": "cross-var npx babel $npm_package_config_src_dir --out-dir $npm_package_config_dest_dir",
    "compile:js:w": "cross-var npx babel --watch $npm_package_config_src_dir --out-dir $npm_package_config_dest_dir",
    "compile:components": "cd components_src && npm run build",
    "compile:components:w": "cd components_src && npm start",

    "dev": "run-p compile:sass:w compile:js:w compile:components:w",
    "build": "run-s compile:sass compile:js compile:components",

    "postinstall": "cd components_src && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robert8888/portfolio.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/robert8888/portfolio/issues"
  },
  "homepage": "https://github.com/robert8888/portfolio#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "cross-var": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.5"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1"
  }
}
